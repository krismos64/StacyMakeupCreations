{% extends 'base.html.twig' %}

{% block title %}StacyMakeupCreations{% endblock %}

{% block body %}
<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <img src="{{ asset('assets/logos/logo3.png') }}" alt="StacyMakeupCreations Logo" class="img-fluid mb-4">
            <h1 class="fw-light">Bienvenue !</h1>
            <p class="lead text-body-secondary">Que vous recherchiez des conseils pour sublimer votre look quotidien, des idées pour un événement spécial, ou simplement de l'inspiration artistique, vous êtes au bon endroit !</p>
            <p>
                <a href="mailto:stacy.laplace64@gmail.com" class="btn btn-primary my-2">Me contacter</a>
            </p>
            {% if not app.user %}
            <p>
                <a href="{{ path('app_login') }}" class="btn btn-secondary my-2">Connexion</a>
            </p>
            {% endif %}
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% for creation in creations %}
            <!-- Item -->
            <div class="col">
                <div class="card shadow-sm">
                    <img src="/uploads/{{ creation.image }}" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="{{ creation.name }}">
                    <div class="card-body">
                        <p class="card-text">{{ creation.name }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('app_creation_details', { 'slug': creation.slug }) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                                {% if app.user and "ROLE_ADMIN" in app.user.roles %}
                                <button type="button" class="btn btn-sm btn-outline-secondary">Editer</button>
                                {% endif %}
                            </div>
                            <small class="text-body-secondary">#{{ creation.id }}</small>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
